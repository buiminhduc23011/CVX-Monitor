<Window x:Class="CameraSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Camera Simulator" Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#2D2D30">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="ðŸ“· Camera Simulator" FontSize="24" FontWeight="Bold" 
                   Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Connection Settings -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel>
                    <TextBlock Text="Port:" Foreground="#AAA" Margin="0,0,0,4"/>
                    <TextBox x:Name="PortTextBox" Text="8500" FontSize="16" Padding="8" Background="#3E3E42" Foreground="White" BorderBrush="#555"/>
                </StackPanel>
                
                <Button x:Name="StartButton" Grid.Column="1" Content="Báº¯t Ä‘áº§u Server" 
                        Click="StartServer_Click" Margin="10,20,0,0"
                        Padding="15,8" Background="#0078D4" Foreground="White" BorderBrush="Transparent"/>
            </Grid>
            
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Ellipse x:Name="StatusIndicator" Width="12" Height="12" Fill="Red" Margin="0,0,8,0"/>
                <TextBlock x:Name="StatusText" Text="ChÆ°a káº¿t ná»‘i" Foreground="#AAA"/>
            </StackPanel>
        </StackPanel>

        <!-- Product Settings -->
        <StackPanel Grid.Row="2" Margin="0,0,0,20">
            <TextBlock Text="Product ID:" Foreground="#AAA" Margin="0,0,0,4"/>
            <TextBox x:Name="ProductIdTextBox" Text="PROD001" FontSize="16" Padding="8" Background="#3E3E42" Foreground="White" BorderBrush="#555"/>
        </StackPanel>

        <!-- Counter Display -->
        <Grid Grid.Row="3" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Background="#3E3E42" CornerRadius="8" Padding="15" Margin="0,0,5,0">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="TOTAL" Foreground="#AAA" FontSize="11" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="TotalCountText" Text="0" FontSize="32" FontWeight="Bold" Foreground="#0078D4" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Background="#3E3E42" CornerRadius="8" Padding="15" Margin="5,0,5,0">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="OK" Foreground="#AAA" FontSize="11" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="OkCountText" Text="0" FontSize="32" FontWeight="Bold" Foreground="#43A047" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Background="#3E3E42" CornerRadius="8" Padding="15" Margin="5,0,0,0">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="NG" Foreground="#AAA" FontSize="11" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="NgCountText" Text="0" FontSize="32" FontWeight="Bold" Foreground="#E53935" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Log -->
        <Border Grid.Row="4" Background="#1E1E1E" CornerRadius="8" Padding="10" Margin="0,0,0,15">
            <TextBox x:Name="LogTextBox" IsReadOnly="True" TextWrapping="Wrap" 
                     VerticalScrollBarVisibility="Auto" Background="Transparent" 
                     Foreground="#AAA" BorderThickness="0" FontFamily="Consolas" FontSize="11"/>
        </Border>

        <!-- Action Buttons -->
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="OkButton" Content="âœ“ OK" Click="OkButton_Click" IsEnabled="False"
                    FontSize="20" FontWeight="Bold" Height="60" Margin="0,0,5,0"
                    Background="#43A047" Foreground="White" BorderBrush="Transparent"/>

            <Button x:Name="NgButton" Grid.Column="1" Content="âœ— NG" Click="NgButton_Click" IsEnabled="False"
                    FontSize="20" FontWeight="Bold" Height="60" Margin="5,0,5,0"
                    Background="#E53935" Foreground="White" BorderBrush="Transparent"/>

            <Button x:Name="ResetButton" Grid.Column="2" Content="â†º" Click="ResetButton_Click"
                    FontSize="20" Width="50" Height="60"
                    Background="#555" Foreground="White" BorderBrush="Transparent" ToolTip="Reset"/>
        </Grid>
    </Grid>
</Window>
